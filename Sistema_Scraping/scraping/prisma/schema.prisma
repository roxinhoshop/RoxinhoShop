// DEFINE o esquema do banco de dados Prisma para o armazenamento de produtos coletados.

generator client {
  provider = "prisma-client-js"
}

// Define MySQL como o provedor de banco de dados.
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define o modelo de Produto para armazenamento de dados coletados.
model Produto {
id_prdt Int @id @default(autoincrement())
titulo_prdt String
preco_prdt Float
descricao_prdt String @db.Text
avaliacao_prdt Float?
imagem_prdt Bytes?
link_prdt String?
data_coleta DateTime @default(now())
@@index([titulo_prdt])
@@index([preco_prdt])
@@index([avaliacao_prdt])
}
